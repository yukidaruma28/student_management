<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="studentManagementSystem.testDemo.repository.ApplicationStatusRepository">

  <select id="findByStudentsCoursesId" resultType="studentManagementSystem.testDemo.data.ApplicationStatus">
    SELECT
      application_status_id as applicationStatusId,
      students_courses_id as studentsCoursesId,
      status
    FROM application_status
    WHERE students_courses_id = #{studentsCoursesId}
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="applicationStatusId">
    INSERT INTO application_status
    (students_courses_id, status)
    VALUES (#{studentsCoursesId}, #{status})
  </insert>

  <update id="update">
    UPDATE application_status
    SET status = #{status}
    WHERE application_status_id = #{applicationStatusId}
  </update>

  <delete id="deleteByStudentsCoursesId">
    DELETE FROM application_status
    WHERE students_courses_id = #{studentsCoursesId}
  </delete>

</mapper>
